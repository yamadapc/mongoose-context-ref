{
  "name": "mongoose-context-ref",
  "version": "2.1.3",
  "main": "lib/index.js",
  "description": "A mongoose plugin which adds a simple `context` or `parent` like relation between a model's document and variable model parent document",
  "homepage": "https://github.com/yamadapc/mongoose-context-ref",
  "bugs": "https://github.com/yamadapc/mongoose-context-ref/issues",
  "keywords": [
    "mongoose",
    "context",
    "references",
    "relations"
  ],
  "author": {
    "name": "Pedro Tacla Yamada",
    "email": "tacla.yamada@gmail.com",
    "url": "github.com/yamadapc"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yamadapc/mongoose-context-ref"
  },
  "licenses": [
    {
      "type": "MIT"
    }
  ],
  "scripts": {
    "ci": "grunt --verbose",
    "test": "grunt",
    "coverage": "mocha -t 0 --require blanket -R html-cov test/*.test.js > coverage.html"
  },
  "config": {
    "blanket": {
      "data-cover-never": [
        "node_modules"
      ],
      "pattern": [
        "lib"
      ],
      "spec-cov": {
        "threshold": 80,
        "localThreshold": 80,
        "lcovOutput": "lcov"
      },
      "data_cover_never": "node_modules"
    }
  },
  "devDependencies": {
    "blanket": "1.1.7",
    "coveralls": "^2.10.0",
    "grunt": "~1.0.0",
    "grunt-contrib-jshint": "^0.12.0",
    "grunt-contrib-watch": "~0.6.1",
    "grunt-simple-mocha": "~0.4.0",
    "istanbul": "^0.4.2",
    "lodash": "^4.0.1",
    "mocha": "^2.4.5",
    "mocha-make-stub": "^2.0.0",
    "mocha-spec-cov-alt": "^1.1.1",
    "mongoose": "^4.3.7",
    "should": "^8.2.1",
    "sinon": "^1.17.3",
    "time-grunt": "^1.3.0"
  },
  "dependencies": {
    "deoopfy": "^1.0.2",
    "mocha": "^2.4.2"
  }
}
